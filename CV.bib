
@article{castillo_Perception_2021,
  title = {Perception of Economic Inequality: {{Concepts}}, Associated Factors and Prospects of a Burgeoning Research Agenda ({{Percepci\'on}} de Desigualdad Econ\'omica: Conceptos, Factores Asociados y Proyecciones de Una Agenda Creciente de Investigaci\'on)},
